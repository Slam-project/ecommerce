{% extends "::base.html.twig" %}

{% block body %}
    <div class="container" style="margin-top: 20px;">
        {% if command is not null %}
            <div class="col-lg-2 cold-md-2 col-sm-2 col-xs-12 space-bottom">
                <div style="background-color: {{ command.etat.color }}" class="etatCommand">{{ command.etat.name }}</div>
            </div>
            <div class="col-lg-10 cold-md-10 col-sm-10 col-xs-12 space-bottom">
                <h3 style="padding: 0; margin: 0;">Commande numéro {{ command.id }}</h3>
            </div>

            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                <p class="middle">Nom</p>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                <p  class="middle">Quantit&eacute;</p>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                <p class="middle">Prix (HT) / unit&eacute;</p>
            </div>

            {% for detailsCommand in command.detailsCommands %}
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <hr class="sepCommand">
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <p class="middle"><a href="{{ path("productInfo", {'id': detailsCommand.product.id }) }}">{{ detailsCommand.name }}</a></p>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <p class="middle">{{ detailsCommand.quantite }}</p>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <p class="middle">{{ detailsCommand.price }} €</p>
                </div>
            {% endfor %}
        {% else %}
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h3>Aucun historique pour cette commande n'est enregistré</h3>
            </div>
        {% endif %}
    </div>
    <div class="barre2"></div>
{% endblock %}

